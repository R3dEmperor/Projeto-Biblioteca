@model Projeto_Biblioteca.WEB.Models.Genero

@{
    ViewData["Title"] = "Cadastrar Gênero";
}

<h1 class="mb-4">Cadastrar Gênero</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Descrição -->
            <div class="form-group mb-3">
                <label asp-for="Descricao_Genero" class="form-label"></label>
                <input asp-for="Descricao_Genero" class="form-control" autocomplete="off" />
                <span asp-validation-for="Descricao_Genero" class="text-danger"></span>
            </div>

            <!-- Classificação -->
            <div class="form-group mb-3">
                <label asp-for="Classificacao_Genero" class="form-label"></label>
                <input asp-for="Classificacao_Genero" class="form-control" autocomplete="off" />
                <span asp-validation-for="Classificacao_Genero" class="text-danger"></span>
            </div>

            <!-- Botões -->
            <div class="mt-4 d-flex gap-3">
                <button type="submit" class="btn btn-success px-4">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Voltar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



