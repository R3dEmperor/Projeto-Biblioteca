@model Projeto_Biblioteca.WEB.Models.Genero

@{
    ViewData["Title"] = "Editar Gênero";
}

<h1 class="mb-3">Editar Gênero</h1>

<div class="card p-4 shadow-sm mb-4">
    <form asp-action="Edit">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="Id_Genero" />

        <!-- Descrição -->
        <div class="form-group mb-3">
            <label asp-for="Descricao_Genero" class="form-label"></label>
            <input asp-for="Descricao_Genero" class="form-control" autocomplete="off" />
            <span asp-validation-for="Descricao_Genero" class="text-danger"></span>
        </div>

        <!-- Classificação -->
        <div class="form-group mb-3">
            <label asp-for="Classificacao_Genero" class="form-label"></label>
            <input asp-for="Classificacao_Genero" class="form-control" autocomplete="off" />
            <span asp-validation-for="Classificacao_Genero" class="text-danger"></span>
        </div>

        <!-- Botões -->
        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-brown px-4">
                Salvar
            </button>

            <a asp-action="Index" class="btn btn-brown-light px-4">
                Voltar
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
