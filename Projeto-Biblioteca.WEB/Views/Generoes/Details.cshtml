@model Projeto_Biblioteca.WEB.Models.Genero

@{
    ViewData["Title"] = "Detalhes do Gênero";
}

<h1 class="mb-3">Detalhes do Gênero</h1>

<div class="card p-4 shadow-sm mb-4">
    <dl class="row mb-0">
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.Descricao_Genero)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Descricao_Genero)
        </dd>

        <dt class="col-sm-3 fw-bold mt-3">
            @Html.DisplayNameFor(model => model.Classificacao_Genero)
        </dt>
        <dd class="col-sm-9 mt-3">
            @Html.DisplayFor(model => model.Classificacao_Genero)
        </dd>
    </dl>
</div>

<div class="d-flex gap-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id_Genero" class="btn btn-brown px-4">
        Editar
    </a>

    <a asp-action="Index" class="btn btn-brown-light px-4">
        Voltar
    </a>
</div>
