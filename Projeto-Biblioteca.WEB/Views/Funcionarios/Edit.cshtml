@model Projeto_Biblioteca.WEB.Models.Funcionario

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Funcionário</h4>
<hr />

<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdTipoUsuario" />

            <div class="form-group">
                <label asp-for="Descricao_Tipo" class="control-label"></label>
                <input asp-for="Descricao_Tipo" class="form-control" />
                <span asp-validation-for="Descricao_Tipo" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

