@model IEnumerable<Projeto_Biblioteca.WEB.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Funcionários</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao_Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao_Tipo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdTipoUsuario" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.IdTipoUsuario" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IdTipoUsuario" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
