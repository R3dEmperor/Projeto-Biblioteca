@model Projeto_Biblioteca.WEB.Models.Registro

@{
    ViewData["Title"] = "Detalhes do Registro";
}

<h1 class="mb-3 text-brown">Detalhes do Registro</h1>

<div class="card p-4 shadow-sm mb-4" style="max-width:600px;">
    <dl class="row mb-0">
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.Reserva_Genero)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reserva_Genero)
        </dd>

        <dt class="col-sm-3 fw-bold mt-3">
            @Html.DisplayNameFor(model => model.Devolucao_Registro)
        </dt>
        <dd class="col-sm-9 mt-3">
            @Html.DisplayFor(model => model.Devolucao_Registro)
        </dd>
    </dl>
</div>

<div class="d-flex gap-3 mb-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id_Genero" class="btn btn-brown px-4">
        Editar
    </a>
    <a asp-action="Index" class="btn btn-brown-light px-4">
        Voltar
    </a>
</div>
