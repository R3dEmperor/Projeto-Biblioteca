@{
    ViewData["Title"] = "Página Inicial";
}

<div class="home-container d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="card p-5 shadow-sm text-center" style="max-width:600px;">
        <h1 class="display-4 home-title mb-3">Bem-vindo à Prateleira Virtual</h1>
        <p class="home-subtitle mb-4">
            Explore e alugue livros em nossa biblioteca virtual.
            </a>.
        </p>

        <!-- Botão Começar -->
        <a asp-action="Index" asp-controller="Produto" class="btn btn-brown btn-lg px-4">
            Começar
        </a>
    </div>
</div>

<!-- Cards de destaque -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card card-highlight mb-3">
                <h4 class="card-title">Mais Populares</h4>
                <p class="card-text">Veja os livros mais alugados da biblioteca.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-highlight mb-3">
                <h4 class="card-title">Novidades</h4>
                <p class="card-text">Confira os lançamentos e novidades da nossa coleção.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-highlight mb-3">
                <h4 class="card-title">Categorias</h4>
                <p class="card-text">Escolha livros por gênero, autor ou temática.</p>
            </div>
        </div>
    </div>
</div>

