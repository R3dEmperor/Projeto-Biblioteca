@{
    ViewData["Title"] = "Página Inicial";
}

<!-- SEÇÃO PRINCIPAL COM O CARD CENTRAL -->
<div class="home-container d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="card p-5 shadow-sm text-center" style="max-width:600px; background-color:rgba(255,245,235,0.9); border-radius:12px;">

        <h1 class="display-4 home-title mb-3">Bem-vindo à Prateleira Virtual</h1>

        <p class="home-subtitle mb-4">
            Explore e alugue livros em nossa biblioteca virtual.
        </p>

        <!-- Botão Começar → Login -->
        <a asp-action="Login" asp-controller="Usuarios" class="btn btn-brown btn-lg px-4">
            Começar
        </a>
    </div>
</div>

<!-- BOTÕES PRINCIPAIS -->
<div class="text-center mt-5">
    <a asp-controller="Produtos" asp-action="Index"
       class="btn btn-outline-dark m-2 px-4 py-2"
       style="border-color:#5a3e2b; color:#5a3e2b;">
        Produtos
    </a>

    <a asp-controller="Usuarios" asp-action="Index"
       class="btn btn-outline-dark m-2 px-4 py-2"
       style="border-color:#5a3e2b; color:#5a3e2b;">
        Usuários
    </a>

    <a asp-controller="Funcionarios" asp-action="Index"
       class="btn btn-outline-dark m-2 px-4 py-2"
       style="border-color:#5a3e2b; color:#5a3e2b;">
        Funcionários
    </a>

    <a asp-controller="Registros" asp-action="Index"
       class="btn btn-outline-dark m-2 px-4 py-2"
       style="border-color:#5a3e2b; color:#5a3e2b;">
        Registros
    </a>

    <a asp-controller="Reservas" asp-action="Index"
       class="btn btn-outline-dark m-2 px-4 py-2"
       style="border-color:#5a3e2b; color:#5a3e2b;">
        Reservas
    </a>
</div>


<!-- CARDS DE DESTAQUE -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card card-highlight mb-3">
                <h4 class="card-title">Mais Populares</h4>
                <p class="card-text">Veja os livros mais alugados da biblioteca.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-highlight mb-3">
                <h4 class="card-title">Novidades</h4>
                <p class="card-text">Confira os lançamentos e novidades da nossa coleção.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-highlight mb-3">
                <h4 class="card-title">Categorias</h4>
                <p class="card-text">Escolha livros por gênero, autor ou temática.</p>
            </div>
        </div>
    </div>
</div>
