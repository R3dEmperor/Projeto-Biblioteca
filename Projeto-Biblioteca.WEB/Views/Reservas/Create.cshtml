@model Projeto_Biblioteca.WEB.Models.Reserva

@{
    ViewData["Title"] = "Cadastrar Reserva";
}

<h1 class="mb-3 text-brown">Cadastrar Reserva</h1>

<div class="card p-4 shadow-sm mb-4" style="max-width:600px;">
    <form asp-action="Create">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Usuário -->
        <div class="form-group mb-3">
            <label asp-for="UsuarioReserva" class="form-label"></label>
            <input asp-for="UsuarioReserva" class="form-control" autocomplete="off" />
            <span asp-validation-for="UsuarioReserva" class="text-danger"></span>
        </div>

        <!-- Produto -->
        <div class="form-group mb-3">
            <label asp-for="ProdutoReserva" class="form-label"></label>
            <input asp-for="ProdutoReserva" class="form-control" autocomplete="off" />
            <span asp-validation-for="ProdutoReserva" class="text-danger"></span>
        </div>

        <!-- Data da Reserva -->
        <div class="form-group mb-3">
            <label asp-for="DataReserva" class="form-label"></label>
            <input asp-for="DataReserva" type="date" class="form-control" />
            <span asp-validation-for="DataReserva" class="text-danger"></span>
        </div>

        <!-- Data de Devolução -->
        <div class="form-group mb-3">
            <label asp-for="DataDevolucao" class="form-label"></label>
            <input asp-for="DataDevolucao" type="date" class="form-control" />
            <span asp-validation-for="DataDevolucao" class="text-danger"></span>
        </div>

        <!-- Botões -->
        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-brown px-4">Salvar</button>
            <a asp-action="Index" class="btn btn-brown-light px-4">Voltar</a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

