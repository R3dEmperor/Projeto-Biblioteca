@model Projeto_Biblioteca.WEB.Models.Reserva

@{
    ViewData["Title"] = "Excluir Reserva";
}

<h1 class="mb-3 text-brown">Excluir Reserva</h1>

<h4 class="mb-4">Tem certeza que deseja excluir esta reserva?</h4>

<div class="card p-4 shadow-sm mb-4" style="max-width:700px;">
    <dl class="row mb-0">
        <dt class="col-sm-3 fw-bold">Usuário</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.UsuarioReserva)</dd>

        <dt class="col-sm-3 fw-bold mt-3">Produto</dt>
        <dd class="col-sm-9 mt-3">@Html.DisplayFor(model => model.ProdutoReserva)</dd>

        <dt class="col-sm-3 fw-bold mt-3">Data da Reserva</dt>
        <dd class="col-sm-9 mt-3">@Html.DisplayFor(model => model.DataReserva)</dd>

        <dt class="col-sm-3 fw-bold mt-3">Data de Devolução</dt>
        <dd class="col-sm-9 mt-3">@Html.DisplayFor(model => model.DataDevolucao)</dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="IdReserva" />
        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-danger px-4">
                Confirmar Exclusão
            </button>
            <a asp-action="Index" class="btn btn-brown-light px-4">
                Voltar
            </a>
        </div>
    </form>
</div>
