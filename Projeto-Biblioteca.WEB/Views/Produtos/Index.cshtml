@model IEnumerable<Projeto_Biblioteca.WEB.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1 class="mb-4 text-brown">Lista de Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-brown px-4">Adicionar Novo</a>
</p>

<table class="table table-hover table-striped shadow-sm" style="background-color:#FFF7EF;">
    <thead class="table-header">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Genero_Produto)</th>
            <th>@Html.DisplayNameFor(model => model.Autor_Produto)</th>
            <th class="text-end">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Genero_Produto</td>
                <td>@item.Autor_Produto</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id_Produto" class="btn btn-sm btn-brown-light me-1">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id_Produto" class="btn btn-sm btn-brown-light me-1">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id_Produto" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
