@model Projeto_Biblioteca.WEB.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1 class="mb-3 text-brown">Excluir Produto</h1>

<h4 class="mb-4">Tem certeza que deseja excluir este produto?</h4>

<div class="card p-4 shadow-sm mb-4" style="max-width:600px;">
    <dl class="row mb-0">
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.Genero_Produto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Genero_Produto)
        </dd>

        <dt class="col-sm-3 fw-bold mt-3">
            @Html.DisplayNameFor(model => model.Autor_Produto)
        </dt>
        <dd class="col-sm-9 mt-3">
            @Html.DisplayFor(model => model.Autor_Produto)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id_Produto" />
        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-danger px-4">
                Confirmar Exclusão
            </button>
            <a asp-action="Index" class="btn btn-brown-light px-4">
                Voltar
            </a>
        </div>
    </form>
</div>
